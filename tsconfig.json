{
	"compilerOptions": {
		"outDir": "dist",
		"module": "ESNext",
		"target": "ES2022",
		"lib": [
			"ES2022",
			"DOM"
		],
		"downlevelIteration": true,
		"strict":  true,
		"sourceMap": true,
		"allowJs": false,
		"declaration": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"esModuleInterop": true
	},
	"include": [
		"src",
		"./package.json"
	],
	"exclude": [
		"node_modules",
		"dist",
		"example",
		"_rollup.config.js.old"
	]
}
